<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cvCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="3dp"
    card_view:cardElevation="2dp"
    android:layout_below="@+id/cvProfile"
    android:layout_margin="5dp"
    card_view:cardBackgroundColor="@color/textColorWhite"
    android:animateLayoutChanges="true"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rlHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <RelativeLayout
                android:id="@+id/rlChild"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                >

                <com.arshad.mindvalley.global.widget.CustomFontRegularTextView
                    android:id="@+id/tvCategoryName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nature"
                    android:textSize="18sp"
                    android:textColor="@color/textColorBlack"
                    />

                <com.arshad.mindvalley.global.widget.CustomFontRegularTextView
                    android:id="@+id/tvPhotoCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Photo Count: 2000"
                    android:textSize="13sp"
                    android:textColor="@color/textColorGray"
                    android:layout_below="@+id/tvCategoryName"
                    />

            </RelativeLayout>

            <View
                android:id="@+id/vDivider"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/rlChild"
                android:background="@color/transparentBlack"
                />

            <LinearLayout
                android:id="@+id/llBottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/vDivider"
                >

                <com.arshad.mindvalley.global.widget.CustomFontRegularTextView
                    android:id="@+id/tvSelf"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Self"
                    android:layout_gravity="bottom"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textAllCaps="true"
                    android:textColor="@color/colorPrimary"
                    android:padding="8dp"
                    android:background="?attr/selectableItemBackground"
                    />

                <View
                    android:id="@+id/vDividerButton"
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/transparentBlack"
                    />

                <com.arshad.mindvalley.global.widget.CustomFontRegularTextView
                    android:id="@+id/tvPhotos"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Photos"
                    android:layout_gravity="bottom"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textAllCaps="true"
                    android:textColor="@color/colorPrimary"
                    android:layout_below="@+id/vChild"
                    android:padding="8dp"
                    android:background="?attr/selectableItemBackground"
                    />

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>